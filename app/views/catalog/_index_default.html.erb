<%# default partial to display solr document fields in catalog index view -%>
<dl class="document-metadata dl-horizontal dl-invert">

  <% work_type = document.human_readable_type %>
  <% if i18n_set? work_type + '.fields' %>
      <% vocabs =  I18n.t work_type + '.fields' %>
  <% else %>
      <% vocabs =  I18n.t 'Generic Work.fields' %>
  <% end %>

  <% vocabs.each do |vocab, fields| %>
      <% fields.each do |key, value| %>
          <% if !document[Solrizer.solr_name("desc_metadata__#{key}")].nil? && value[:views].include?('index') %>
              <dt class="blacklight-<%= key %>"><%= value[:label] %></dt>
              <dd class="blacklight-<%= key %>"><%= document[Solrizer.solr_name("desc_metadata__#{key}")].to_sentence %></dd>
          <% end %>
      <% end %>
  <% end %>

</dl>
